<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	.mainPanel {
		border-style: none;
	}
	
	.bitPanel {
		height: 100%;
		width: 100%;
		border-style: none;
	}
	
	.headerLabel {
		font-size: x-large;
		display: inline-block;
	}
	
	.label {
		font-size: large;
		border-style: none;
	}
	
	.leftAlign {
		text-align: left;
	}
	
	.rightAlign {
		text-align: right;
	}
	
	.imageSpacer {
		width: 5px;
		height: 100%;
		border-style: none;
	}
	
	.headerSpacer {
		width: 100%;
		height: 25px;
		border-style: none;
	}
	
	.horizontalPanelSpacer {
		width: 100%;
		height: 35px;
		border-style: none;
	}
	
	.image {
		border-style: none;
	}
	
	.verticalPanelSpacer {
		width: 30px;
		height: 100%;
		border-style: none;
	}
	
	.button {
		font-size: x-large;
		min-height: 45px;
		height: 25%;
		width: 50%;
		border-radius: 15px;
		moz-border-radius: 15px;
		-webkit-border-radius: 15px;
		outline: none;
	}
	</ui:style>

	<g:VerticalPanel ui:field="mainPanel" styleName='{style.mainPanel}'
		horizontalAlignment="ALIGN_CENTER" spacing="5">
		<g:SimplePanel styleName='{style.headerSpacer}'></g:SimplePanel>
		<g:HorizontalPanel styleName='{style.bitPanel}'
			verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
			<g:Label styleName='{style.headerLabel}' text="Share your Stuff"></g:Label>
		</g:HorizontalPanel>
		<g:SimplePanel styleName='{style.headerSpacer}'></g:SimplePanel>
		<g:HorizontalPanel>
			<g:SimplePanel styleName='{style.verticalPanelSpacer}'></g:SimplePanel>
			<g:VerticalPanel>
				<g:HorizontalPanel styleName='{style.bitPanel}'
					verticalAlignment="ALIGN_MIDDLE">
					<g:Image url="img/1.png" styleName='{style.image}'></g:Image>
					<g:SimplePanel styleName='{style.imageSpacer}'></g:SimplePanel>
					<g:Label addStyleNames="{style.label} {style.rightAlign}"
						text="Take a pic of your stuff"></g:Label>
				</g:HorizontalPanel>
				<g:SimplePanel styleName='{style.horizontalPanelSpacer}'></g:SimplePanel>
				<g:HorizontalPanel styleName='{style.bitPanel}'
					verticalAlignment="ALIGN_MIDDLE">
					<g:Label addStyleNames="{style.label} {style.leftAlign}"
						text="Complete with the information"></g:Label>
					<g:SimplePanel styleName='{style.imageSpacer}'></g:SimplePanel>
					<g:Image url="img/2.png" styleName="{style.image}"></g:Image>
				</g:HorizontalPanel>
				<g:SimplePanel styleName='{style.horizontalPanelSpacer}'></g:SimplePanel>
				<g:HorizontalPanel styleName='{style.bitPanel}'
					verticalAlignment="ALIGN_MIDDLE">
					<g:Image url="img/3.png" styleName='{style.image}'></g:Image>
					<g:SimplePanel styleName='{style.imageSpacer}'></g:SimplePanel>
					<g:Label addStyleNames="{style.label} {style.rightAlign}"
						text="Update to your stuffs"></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:SimplePanel styleName='{style.verticalPanelSpacer}'></g:SimplePanel>
		</g:HorizontalPanel>
		<g:SimplePanel styleName='{style.horizontalPanelSpacer}'></g:SimplePanel>
		<g:HorizontalPanel styleName='{style.bitPanel}'
			verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
			<g:Button styleName='{style.button}' text="GOT IT" ui:field="gotItButton"></g:Button>
		</g:HorizontalPanel>
		<g:SimplePanel styleName='{style.horizontalPanelSpacer}'></g:SimplePanel>
		<g:HorizontalPanel styleName='{style.bitPanel}'
			verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
			<g:Image url="img/home.png" styleName='{style.image}'></g:Image>
			<g:Image url="img/my_stuffs.png" styleName='{style.image}'></g:Image>
			<g:Image url="img/photo.png" styleName='{style.image}'></g:Image>
			<g:Image url="img/man.png" styleName='{style.image}'></g:Image>
			<g:Image url="img/newsfeed.png" styleName='{style.image}'></g:Image>
			<g:Image url="img/list.png" styleName='{style.image}'></g:Image>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
