<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	.mainPanel {
		border-style: none;
	}
	
	.bitPanel {
		height: 100%;
		width: 100%;
		border-style: none;
	}
	
	.headerLabel {
		font-size: x-large;
		display: inline-block;
	}
	
	.label {
		font-size: large;
		border-style: none;
	}
	
	.leftAlign {
		text-align: left;
	}
	
	.rightAlign {
		text-align: right;
	}
	
	.imageSpacer {
		width: 5px;
		height: 100%;
		border-style: none;
	}
	
	.headerSpacer {
		width: 100%;
		height: 25px;
		border-style: none;
	}
	
	.horizontalPanelSpacer {
		width: 100%;
		height: 35px;
		border-style: none;
	}
	
	.image {
		border-style: none;
	}
	
	.verticalPanelSpacer {
		width: 30px;
		height: 100%;
		border-style: none;
	}
	
	.button {
		width: 85px;
		height: 40px;
		background-color: white;
	}
	
	.photoDeviceButton {
		background-image: url(img/photoDevice.png);
		width: 85px;
		height: 40px;
	}
	
	.arrowButton {
		background-image: url(img/arrow.png);
		width: 85px;
		height: 40px;
	}
	</ui:style>

	<g:VerticalPanel ui:field="mainPanel" styleName='{style.mainPanel}'
		horizontalAlignment="ALIGN_CENTER" spacing="5">
		<g:SimplePanel styleName='{style.headerSpacer}'></g:SimplePanel>
		<g:HorizontalPanel styleName='{style.bitPanel}'
			verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
			<g:Label styleName='{style.headerLabel}' text="Share your Stuff"></g:Label>
		</g:HorizontalPanel>
		<g:SimplePanel styleName='{style.headerSpacer}'></g:SimplePanel>
		<g:SimplePanel ui:field="imagePanel">
		</g:SimplePanel>
		<g:SimplePanel styleName='{style.horizontalPanelSpacer}'></g:SimplePanel>
		<g:HorizontalPanel styleName='{style.bitPanel}'
			verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
			<g:Button text="Your library" ui:field="yourLibraryButton"
				styleName='{style.button}'></g:Button>
			<g:Button ui:field="photoDeviceButton" styleName='{style.photoDeviceButton}'></g:Button>
			<g:Button ui:field="arrowButton" styleName='{style.arrowButton}'></g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
